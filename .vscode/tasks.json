{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cargo build",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "cargo test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "cargo run",
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": ["$rustc"]
        }
    ]
}